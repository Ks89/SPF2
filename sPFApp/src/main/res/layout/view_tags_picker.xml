<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <it.polimi.spf.app.view.TagsViewer
        android:id="@+id/tags_viewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tags_viewer">

        <EditText
            android:id="@+id/edit_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/add_tag_button"
            android:hint="Insert a search word"
            android:inputType="textNoSuggestions"
            android:text="" />

        <com.mikepenz.iconics.view.IconicsCompatButton
            android:id="@+id/add_tag_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="{gmd-add-box}"
            android:textAllCaps="false"
            android:textColor="@color/white_main"
            android:textSize="26sp"
            android:theme="@style/AppTheme.Button" />

    </RelativeLayout>

</RelativeLayout>