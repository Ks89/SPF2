<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/title_text_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/message_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="@color/gray"
        android:layout_below="@+id/title_text_notification"
        android:layout_alignLeft="@+id/title_text_notification"
        android:layout_alignStart="@+id/title_text_notification" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/stopSpfButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST"
        android:id="@+id/testButton"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/stopSpfButton"/>

</RelativeLayout>