<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/highlight</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

    <style name="keyValueListEntry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:layout_marginBottom">@dimen/content_outer_padding</item>
        <item name="android:padding">@dimen/content_inner_padding</item>
        <item name="android:background">@drawable/profile_field_background</item>
    </style>

    <style name="keyValueListDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/content_inner_padding</item>
        <item name="android:layout_marginTop">@dimen/content_inner_padding</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/outline</item>
    </style>

    <style name="keyValueListEntryKey">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#ff8e8e8e</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

    <style name="keyValueListEntryValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>
    
    <style name="profileFieldVisibility">
        
    </style>

    <style name="SPFActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid"></style>

    <style name="ActionBarSpinnerItem">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

</resources>