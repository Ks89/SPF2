<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/app_icon_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#ffff0000"
        android:contentDescription="@string/app_card_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/app_name_view"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/app_identifier_view"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:textColor="#bb000000"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/Ks89/git/SPF/SPFApp/sPFApp/src/main/res/layout/app_card.xml -->