<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin" >

    <TextView
        style="@style/title"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/advertising_settings" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/advertising_list_switch_label"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/advertising_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/advertising_persona"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/advertising_persona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/advertising_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/advertising_advertise_applications"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        style="@style/title"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/advertising_list_title" />

    <ListView
        android:id="@+id/advertising_field_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1" >
    </ListView>

</LinearLayout><!-- From: file:/Users/Ks89/git/SPF/SPFApp/sPFApp/src/main/res/layout/content_fragment_advertising.xml -->