<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/keyValueListEntry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/profileedit_field_identifier"
            style="@style/keyValueListEntryKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <it.polimi.spf.app.view.CircleSelectSpinner
            android:id="@+id/profile_field_clearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View style="@style/keyValueListDivider" />

    <TextView
        android:id="@+id/profileedit_field_date_text"
        style="@style/keyValueListEntryValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout><!-- From: file:/Users/Ks89/git/SPF/SPFApp/sPFApp/src/main/res/layout/profileedit_field_date.xml -->