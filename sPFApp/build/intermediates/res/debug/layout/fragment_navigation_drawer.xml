<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/navigation_entries"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        tools:context="it.polimi.spf.app.navigation.NavigationDrawerFragment" />

    <Switch
        android:id="@+id/connect_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/navigation_entry_padding"
        android:textSize="@dimen/navigation_entry_text_size"
        android:textOn="ON"
        android:textOff="OFF"
        android:text="@string/proximity_toggle_label" />

</LinearLayout><!-- From: file:/Users/Ks89/AndroidStudioProjects/SPF/sPFApp/src/main/res/layout/fragment_navigation_drawer.xml -->